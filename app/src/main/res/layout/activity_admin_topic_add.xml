<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminTopicAdd">

    <ImageView
        android:id="@+id/AdminAddTopicBg"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/vec_3"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="-43dp" />


    <ImageButton
        android:id="@+id/adminHomeBck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/dark_green"
        android:contentDescription="bktoadminhome"
        android:src="@drawable/bck_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/adminTopicAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Add Topic"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adminHomeBck" />

    <androidx.cardview.widget.CardView
        android:id="@+id/topic_add_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AdminAddTopicBg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/AdminTopicName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/poppins_light_300"
                android:padding="10dp"
                android:text="@string/adminAddtopic_name"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="17dp" />

            <EditText
                android:id="@+id/AdminTopicNameEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/gray_border"
                android:fontFamily="@font/poppins_light_300"
                android:hint="Topic name"
                android:inputType="text"
                android:padding="10dp"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/AdminTopicDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/poppins_light_300"
                android:padding="10dp"
                android:text="@string/AdminAdd_topic_description"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="17dp" />

            <EditText
                android:id="@+id/AdminTopicDescEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/gray_border"
                android:fontFamily="@font/poppins_light_300"
                android:hint="Topic Description"
                android:inputType="text"
                android:padding="10dp"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/AdminTopicHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/poppins_light_300"
                android:padding="10dp"
                android:text="@string/AdminAdd_hours"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="17dp" />

            <EditText
                android:id="@+id/AdminTopicHoursEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/gray_border"
                android:fontFamily="@font/poppins_light_300"
                android:hint="Hours"
                android:inputType="text"
                android:padding="10dp"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/AdminTopicImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/poppins_light_300"
                android:padding="10dp"
                android:text="@string/AdminAdd_image"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="17dp" />

            <Button
                android:id="@+id/selectImageBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/dark_green"
                android:text="@string/AdminAdd_imagebtn"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/imageUploadStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_light_300"
                android:text="No image selected"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/AdminTopicBigDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:fontFamily="@font/poppins_light_300"
                android:padding="10dp"
                android:text="@string/AdminAdd_description"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="17dp" />

            <EditText
                android:id="@+id/AdminTopicBigdescEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/gray_border"
                android:fontFamily="@font/poppins_light_300"
                android:hint="Description"
                android:inputType="text"
                android:padding="10dp"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/TopicAddBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:backgroundTint="@color/dark_green"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/Adminadd_topic"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>