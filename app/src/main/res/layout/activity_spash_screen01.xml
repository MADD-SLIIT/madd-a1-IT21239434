<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".spashScreen01">

    <ImageView
        android:id="@+id/sp_1_img"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentTop="true"
        android:contentDescription="sp01_image"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/geomap" />

    <RelativeLayout
        android:id="@+id/green_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/sp_1_img"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <!-- <ImageView
             android:id="@+id/sp_1_bgimg"
             android:layout_width="match_parent"
             android:layout_height="900mm"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="60dp"
             app:srcCompat="@drawable/vec_1"
             android:scaleY="1.8"
             android:contentDescription="sp01_image"/>-->

        <TextView
            android:id="@+id/sp_1_desc_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="18dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="@string/sp_1_dec_txt"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/sp_1_desc_txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sp_1_desc_txt"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/poppins_light_300"
            android:gravity="center"
            android:text="@string/sp1desctxt2"
            android:textColor="@color/cat_txt"
            android:textSize="18sp" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/sp_1_nxt_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="80dp"
        android:background="@color/white"
        android:contentDescription="Sp_1_nxt_btn"
        android:src="@drawable/sp_1_nxt" />


</RelativeLayout>